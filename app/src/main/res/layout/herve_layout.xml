<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_photo_edit_tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c62918"

            android:layout_centerVertical="true"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/rl_crop_video_one_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#29c618"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_crop_one_l_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_crop_one_l_button"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent"
                        android:src="@drawable/crop_leftfreepull_icon_selected"/>
                </LinearLayout>
                <!--middleButton-->
                <LinearLayout
                    android:id="@+id/ll_video_crop_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#441100"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/ll_bg_yellow_top"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/bg_yellow"
                        android:orientation="vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bg_yellow_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/bg_yellow"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_crop_one_r_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_crop_one_r_button"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="match_parent"
                        android:src="@drawable/crop_rightpull_icon"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>